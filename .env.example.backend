########################################
# POWERBACK BACKEND ENV TEMPLATE
# Safe to commit - no secrets included
########################################

# How to use:
# 1. Copy this file to ".env.local" in the project root.
# 2. Replace all "replace_me" values and example emails/domains with your own.
# 3. See docs and comments below for where to get API keys.

# Dev helpers (API tests, route discovery)
API_TEST_USERNAME=user@example.com
API_TEST_PASSWORD=replace_me
API_TEST_POL=replace_me # politician bioguide ID
MONGODB_TEST_URI=mongodb://127.0.0.1:27017/replace_me_test
RUN_API_TESTS=true
DEBUG_ROUTE_DISCOVERY=false
VERBOSE_ROUTE_TESTER=false
SERVER_NAME=mycomputer

# Core server
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug
# Frontend origin for CORS (e.g. local React dev server)
ORIGIN=http://localhost:3000/

# Database (required)
MONGODB_URI=mongodb://127.0.0.1:27017/replace_me

# Congress.gov API (optional but recommended)
# Get a key from https://api.congress.gov/
CONGRESS_GOV_API_KEY=replace_me

# FEC API (optional but recommended)
# Get a key from https://api.open.fec.gov/developers/
FEC_API_KEY=replace_me

# Google Civics API (optional but recommended)
# Get a key from https://console.cloud.google.com/
GOOGLE_CIVICS_API_KEY=replace_me

# Email (SMTP credentials)
# In development you can set EMAIL_JONATHAN_USER/EMAIL_JONATHAN_PASS and
# EMAIL_USE_SINGLE_CREDENTIALS=true to reuse one account.
EMAIL_JONATHAN_USER=jonathan@example.com
EMAIL_JONATHAN_PASS=replace_me

# Optional address-specific credentials (used in production)
EMAIL_INFO_NOREPLY_USER=info-noreply@example.com
EMAIL_INFO_NOREPLY_PASS=replace_me
EMAIL_ACCOUNT_SECURITY_NOREPLY_USER=account-security-noreply@example.com
EMAIL_ACCOUNT_SECURITY_NOREPLY_PASS=replace_me
EMAIL_ALERTS_NOREPLY_USER=alerts-noreply@example.com
EMAIL_ALERTS_NOREPLY_PASS=replace_me
EMAIL_ERROR_REPORTER_USER=error-reporter@example.com
EMAIL_ERROR_REPORTER_PASS=replace_me
EMAIL_OUTREACH_USER=outreach@example.com
EMAIL_OUTREACH_PASS=replace_me
EMAIL_SUPPORT_USER=support@example.com
EMAIL_SUPPORT_PASS=replace_me
EMAIL_CONTRIBUTORS_USER=contributors@example.com
EMAIL_CONTRIBUTORS_PASS=replace_me

# Legacy watcher credentials (used by some jobs)
EMAIL_NO_REPLY_USER=no-reply@example.com
EMAIL_NO_REPLY_PASS=replace_me

# SMTP host (dev or mail provider)
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_SECURE=false

# Watcher notification targets (email + SMS gateway)
ALERT_EMAIL=alerts@example.com
ALERT_SMS=1234567890@txt.example.net

# Social announcements webhook (optional)
# Used by watcher jobs to post events to Make.com or similar
SOCIAL_WEBHOOK_URL=https://hook.example.com/replace_me
SOCIAL_WEBHOOK_API_KEY=replace_me

# Bitcoin (optional; only needed if using BTC features)
BTC_XPUB=replace_me
BTC_NETWORK=testnet

# Stripe (backend-safe test keys)
# Use Stripe test keys only here (sk_test..., whsec...)
STRIPE_SIGNING_SECRET_WORKBENCH=whsec_replace_me
STRIPE_SIGNING_SECRET_CLI=whsec_replace_me
STRIPE_SK_TEST=sk_test_replace_me

# JWT / Auth (required)
# Use long, random strings (32+ chars)
JWT_SECRET=replace_me
JWT_REFRESH_SECRET=replace_me
JWT_AUDIENCE=us.powerback.authenticated-users

# Session secret (required)
# Use a long, random string (32+ chars)
SESSION_SECRET=replace_me

